include "schema_common.fbs";
include "schema_sensor_msgs.fbs";

namespace fb.mission_msgs;

table MissionRequest
{
    __metadata:fb.MsgMetadata;
    uav_id:string;
    mission_id:string;
    mission_type:int;
    waypoint:[fb.sensor_msgs.NavSatFix];
    radius:double;
    maxVel:double;
    idleVel:double;
    yaw:[float];
    gimbalPitch:[float];
    speed:[float];
    yawMode:int;
    traceMode:int;
    gimbalPitchMode:int;
    finishAction:int;
    commandList:[float];
    commandParameter:[float];
}


table eventRequest
{
    __metadata:fb.MsgMetadata;
    uav_id:string;
    data:string;
}

table eventResponse
{
    __metadata:fb.MsgMetadata;
    success:bool;
    msg:string;
}